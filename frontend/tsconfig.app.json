{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "wailsjs/**/*"],
    "exclude": ["src/**/__tests__/*"],
    "moduleResolution": "node",
    "compilerOptions": {
        "moduleResolution": "node",
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@wails/*": ["./wailsjs/*"]
        }
    }
}
